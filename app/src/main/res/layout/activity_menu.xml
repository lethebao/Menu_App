
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Subtotal Section -->
    <TextView
        android:id="@+id/tv_subtotal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Menu Items -->
    <LinearLayout
        android:id="@+id/layout_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_item1_name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Item 1"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_item1_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"/>

        <TextView
            android:id="@+id/tv_item1_quantity"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_item1_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"/>
    </LinearLayout>

    <!-- Repeat similar blocks for Item 2 and Item 3 -->
    <LinearLayout
        android:id="@+id/layout_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_item2_name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Item 2"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_item2_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"/>

        <TextView
            android:id="@+id/tv_item2_quantity"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_item2_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:marginBottom="24dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_item3_name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Item 3"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_item3_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"/>

        <TextView
            android:id="@+id/tv_item3_quantity"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_item3_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"/>
    </LinearLayout>

    <!-- Place Order Button -->
    <Button
        android:id="@+id/btn_place_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textSize="18sp"/>

</LinearLayout>
